[package]
name = "hc_zome_{{snake_case app_name}}_coordinator"
version = "0.0.1"
edition = "2021"

[lib]
crate-type = ["cdylib", "rlib"]
name = "hc_zome_{{snake_case app_name}}_coordinator"

[dependencies]
hdk = { workspace = true }

serde = { workspace = true }

{{snake_case app_name}}_integrity = { path = "../../integrity/{{snake_case app_name}}", package = "hc_zome_{{snake_case app_name}}_integrity" }

[dev-dependencies]
fixt = "0.1.0"
futures = { version = "0.3.1", default-features = false }
hdk = { workspace = true, features = ["encoding", "test_utils"] }
holochain = { worskpace = true, default-features = false, features = [
  "test_utils",
] }
tokio = { version = "1.3", features = ["full"] }

